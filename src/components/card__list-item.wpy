      } else if (this.card) {
        // url = this.card.vcard ? `virtual-card?cardId=${this.card.id}` : `entity-card?cardId=${this.card.id}`
        url = `virtual-card?cardId=${this.card.id}`

      }

      this.$emit('cardTap', url)
    }
  }
}
